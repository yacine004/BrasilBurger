{% extends 'base.html.twig' %}

{% block title %}Contact{% endblock %}

{% block content %}
<div class="container py-5">
    <div class="row">
        <div class="col-lg-8 mx-auto">
            <h1 class="mb-4">Contactez-nous</h1>
            
            <div class="row mb-4">
                <div class="col-md-6 mb-3">
                    <div class="card shadow-sm border-0">
                        <div class="card-body text-center">
                            <i class="fas fa-phone fa-2x mb-3" style="color: var(--primary-color)"></i>
                            <h5 class="card-title">Téléphone</h5>
                            <p class="card-text">+33 (0) 1 23 45 67 89</p>
                        </div>
                    </div>
                </div>

                <div class="col-md-6 mb-3">
                    <div class="card shadow-sm border-0">
                        <div class="card-body text-center">
                            <i class="fas fa-envelope fa-2x mb-3" style="color: var(--primary-color)"></i>
                            <h5 class="card-title">Email</h5>
                            <p class="card-text">contact@brasilburger.fr</p>
                        </div>
                    </div>
                </div>
            </div>

            <div class="card shadow-sm border-0 mb-4">
                <div class="card-body">
                    <h5 class="card-title mb-3">Heures d'ouverture</h5>
                    <p><strong>Lundi - Vendredi:</strong> 11h00 - 22h00</p>
                    <p><strong>Samedi - Dimanche:</strong> 12h00 - 23h00</p>
                </div>
            </div>

            <div class="text-center">
                <a href="{{ path('app_home') }}" class="btn btn-primary">Retour à l'accueil</a>
            </div>
        </div>
    </div>
</div>
{% endblock %}

<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Brasil Burger</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/BrasilBurger.Web.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg sticky-top" style="background: linear-gradient(135deg, #F4511E 0%, #FF9800 100%); box-shadow: 0 4px 20px rgba(244, 81, 30, 0.2);">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index" style="font-weight: 900; font-size: 1.4rem; color: white !important;">
                    <i class="fas fa-burger"></i> Brasil Burger
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-lg-inline-flex justify-content-between">
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index" style="color: rgba(255,255,255,0.95); font-weight: 500;">Accueil</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Produit" asp-action="Burgers" style="color: rgba(255,255,255,0.95); font-weight: 500;">Burgers</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Produit" asp-action="Menus" style="color: rgba(255,255,255,0.95); font-weight: 500;">Menus</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Produit" asp-action="Complements" style="color: rgba(255,255,255,0.95); font-weight: 500;">Compléments</a>
                        </li>
                    </ul>
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item">
                            <a class="nav-link position-relative" asp-area="" asp-controller="Panier" asp-action="Index" style="color: rgba(255,255,255,0.95); font-weight: 500;">
                                <i class="fas fa-shopping-cart"></i> Panier
                                <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill" id="cart-count" style="display:none; background: linear-gradient(135deg, #E91E63, #C2185B);">0</span>
                            </a>
                        </li>
                        @if (Context.Session.GetInt32("ClientId") != null)
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" id="userDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false" style="color: rgba(255,255,255,0.95); font-weight: 500;">
                                    <i class="fas fa-user"></i> @Context.Session.GetString("ClientNom")
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userDropdown">
                                    <li><a class="dropdown-item" asp-area="" asp-controller="Client" asp-action="Profil">Mon Profil</a></li>
                                    <li><a class="dropdown-item" asp-area="" asp-controller="Client" asp-action="MesCommandes">Mes Commandes</a></li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li><a class="dropdown-item" asp-area="" asp-controller="Client" asp-action="Logout">Déconnexion</a></li>
                                </ul>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Client" asp-action="Login">
                                    <i class="fas fa-sign-in-alt"></i> Connexion
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Client" asp-action="Register">
                                    <i class="fas fa-user-plus"></i> Inscription
                                </a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer style="background: linear-gradient(135deg, #1a1a1a 0%, #2d2d2d 100%); color: white; margin-top: 5rem;">
        <div class="container py-5">
            <div class="row">
                <div class="col-md-4 mb-4 mb-md-0">
                    <h5 style="color: #FF9800; font-weight: 900; margin-bottom: 1rem;">
                        <i class="fas fa-burger"></i> Brasil Burger
                    </h5>
                    <p style="color: rgba(255,255,255,0.85); line-height: 1.6;">Les meilleurs burgers brésiliens livrés chez vous.</p>
                </div>
                <div class="col-md-4 mb-4 mb-md-0">
                    <h6 style="color: #FF9800; font-weight: 700; margin-bottom: 1rem;">Navigation</h6>
                    <ul class="list-unstyled">
                        <li><a href="@Url.Action("Index", "Home")" style="color: rgba(255,255,255,0.85); text-decoration: none; transition: color 0.3s;">Accueil</a></li>
                        <li><a href="@Url.Action("Burgers", "Produit")" style="color: rgba(255,255,255,0.85); text-decoration: none; transition: color 0.3s;">Burgers</a></li>
                        <li><a href="@Url.Action("Menus", "Produit")" style="color: rgba(255,255,255,0.85); text-decoration: none; transition: color 0.3s;">Menus</a></li>
                    </ul>
                </div>
                <div class="col-md-4">
                    <h6 style="color: #FF9800; font-weight: 700; margin-bottom: 1rem;">Contact</h6>
                    <p style="color: rgba(255,255,255,0.85); line-height: 1.8;">
                        <i class="fas fa-phone" style="color: #FF9800; margin-right: 0.5rem;"></i> +221 33 XXX XX XX<br>
                        <i class="fas fa-envelope" style="color: #FF9800; margin-right: 0.5rem;"></i> info@brasilburger.sn
                    </p>
                </div>
            </div>
            <hr style="background-color: rgba(255,255,255,0.2); border: none; height: 1px;">
            <div style="text-align: center; color: rgba(255,255,255,0.7);">
                &copy; 2025 Brasil Burger - Tous droits réservés
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script>
        // Mettre à jour le compteur du panier au chargement
        document.addEventListener('DOMContentLoaded', function() {
            updateCartCount();
        });

        async function updateCartCount() {
            try {
                const response = await fetch('@Url.Action("NombreItems", "Panier")');
                const data = await response.json();
                const cartCount = document.getElementById('cart-count');
                if (data.count > 0) {
                    cartCount.textContent = data.count;
                    cartCount.style.display = 'inline-block';
                } else {
                    cartCount.style.display = 'none';
                }
            } catch (e) {
                console.error('Erreur lors de la mise à jour du panier', e);
            }
        }
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

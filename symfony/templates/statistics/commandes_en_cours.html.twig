{% extends "base.html.twig" %}

{% block title %}Commandes en Cours - Brasil Burger{% endblock %}

{% block content %}
    <div class="card">
        <h2>üìã Commandes en Cours</h2>
        <p>Total: <strong>{{ commandes|length }}</strong></p>
        <a href="{{ path('app_statistics_index') }}" class="btn btn-secondary">‚Üê Retour</a>
    </div>

    {% if commandes is empty %}
        <div class="card">
            <p>Aucune commande en cours.</p>
        </div>
    {% else %}
        <div class="card">
            <table>
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Client</th>
                        <th>Date</th>
                        <th>Montant</th>
                        <th>Mode</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for commande in commandes %}
                        <tr>
                            <td>#{{ commande.id }}</td>
                            <td>{{ commande.client.prenom }} {{ commande.client.nom }}</td>
                            <td>{{ commande.date|date("d/m/Y H:i") }}</td>
                            <td>{{ (commande.montant ?? 0)|number_format(2, ',', ' ') }} FCFA</td>
                            <td>{{ commande.mode }}</td>
                            <td>
                                <a href="{{ path('app_commande_show', {'id': commande.id}) }}" class="btn btn-secondary">Voir</a>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    {% endif %}
{% endblock %}

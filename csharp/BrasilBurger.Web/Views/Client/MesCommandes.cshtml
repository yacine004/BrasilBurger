@model List<Commande>

@{
    ViewData["Title"] = "Mes Commandes";
}

<div class="container mt-5">
    <h1 class="mb-4">Mes Commandes</h1>

    @if (Model == null || Model.Count == 0)
    {
        <div class="alert alert-info">
            <p>Vous n'avez pas encore de commandes.</p>
            <a href="@Url.Action("Burgers", "Produit")" class="btn btn-primary">Passer votre première commande</a>
        </div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-hover">
                <thead class="table-light">
                    <tr>
                        <th>#</th>
                        <th>Date</th>
                        <th>Statut</th>
                        <th>Montant</th>
                        <th>Livraison</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var commande in Model)
                    {
                        <tr>
                            <td><strong>#@commande.Id</strong></td>
                            <td>@commande.Date.ToString("dd/MM/yyyy HH:mm")</td>
                            <td>
                                @if (commande.Etat == "Livrée")
                                {
                                    <span class="badge bg-success">Livrée</span>
                                }
                                else if (commande.Etat == "En cours")
                                {
                                    <span class="badge bg-warning text-dark">En cours</span>
                                }
                                else
                                {
                                    <span class="badge bg-info">@commande.Etat</span>
                                }
                            </td>
                            <td>
                                @if (commande.Paiement != null)
                                {
                                    <strong>@commande.Paiement.Montant.ToString("F2") XOF</strong>
                                }
                                else
                                {
                                    <span class="text-muted">À déterminer</span>
                                }
                            </td>
                            <td>
                                @if (commande.Livraison != null)
                                {
                                    <small>En cours de livraison</small>
                                }
                                else
                                {
                                    <small class="text-muted">En attente</small>
                                }
                            </td>
                            <td>
                                <a href="@Url.Action("Suivi", "Commande", new { id = commande.Id })" class="btn btn-sm btn-primary">
                                    <i class="fas fa-eye"></i> Suivre
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }

    <div class="mt-4">
        <a href="@Url.Action("Profil", "Client")" class="btn btn-outline-secondary">
            <i class="fas fa-arrow-left"></i> Retour au Profil
        </a>
    </div>
</div>

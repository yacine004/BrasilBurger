@model List<Complement>

@{
    ViewData["Title"] = "Compléments";
}

<div class="container mt-5">
    <h1 class="mb-4">Compléments</h1>

    <div class="row">
        @foreach (var complement in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card h-100 shadow-sm">
                    @if (!string.IsNullOrEmpty(complement.Image))
                    {
                        <img src="@complement.Image" class="card-img-top" alt="@complement.Nom" style="height: 250px; object-fit: cover;">
                    }
                    else
                    {
                        <div class="bg-light d-flex align-items-center justify-content-center" style="height: 250px;">
                            <span class="text-muted">Sans image</span>
                        </div>
                    }

                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title">@complement.Nom</h5>

                        <div class="d-flex justify-content-between align-items-center mt-3">
                            <span class="h5 text-primary mb-0">@complement.Prix.ToString("F2") XOF</span>
                        </div>

                        <form asp-action="AjouterComplement" asp-controller="Panier" method="post" class="mt-3">
                            <input type="hidden" name="id" value="@complement.Id" />
                            <button type="submit" class="btn btn-primary w-100">
                                <i class="fas fa-shopping-cart"></i> Ajouter au panier
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

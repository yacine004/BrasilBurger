{% extends 'base.html.twig' %}

{% block title %}Gestion des Statistiques{% endblock %}

{% block content %}
<div class="container-fluid py-4">
    <h1 class="mb-4">Statistiques Détaillées</h1>

    <div class="row mb-4">
        <div class="col-md-3">
            <div class="card text-center shadow-sm border-0">
                <div class="card-body">
                    <i class="fas fa-hourglass-start fa-2x mb-3" style="color: var(--primary-color)"></i>
                    <h5 class="card-title">En cours</h5>
                    <h2 style="color: var(--primary-color);">0</h2>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card text-center shadow-sm border-0">
                <div class="card-body">
                    <i class="fas fa-check-circle fa-2x mb-3" style="color: #28a745"></i>
                    <h5 class="card-title">Validées</h5>
                    <h2 style="color: #28a745;">0</h2>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card text-center shadow-sm border-0">
                <div class="card-body">
                    <i class="fas fa-times-circle fa-2x mb-3" style="color: #dc3545"></i>
                    <h5 class="card-title">Annulées</h5>
                    <h2 style="color: #dc3545;">0</h2>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card text-center shadow-sm border-0">
                <div class="card-body">
                    <i class="fas fa-euro-sign fa-2x mb-3" style="color: var(--secondary-color)"></i>
                    <h5 class="card-title">Recettes</h5>
                    <h2 style="color: var(--secondary-color);">0€</h2>
                </div>
            </div>
        </div>
    </div>

    <div class="card shadow-sm border-0">
        <div class="card-header" style="background: var(--primary-color); color: white;">
            <h5 class="mb-0">Résumé</h5>
        </div>
        <div class="card-body">
            <table class="table">
                <tr>
                    <td>Total des commandes aujourd'hui</td>
                    <td><strong>0</strong></td>
                </tr>
                <tr>
                    <td>Panier moyen</td>
                    <td><strong>0€</strong></td>
                </tr>
                <tr>
                    <td>Taux de validation</td>
                    <td><strong>0%</strong></td>
                </tr>
            </table>
        </div>
    </div>
</div>
{% endblock %}

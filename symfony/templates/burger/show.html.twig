{% extends 'base.html.twig' %}

{% block title %}Détails - {{ title }}{% endblock %}

{% block content %}
<div class="container-fluid py-4">
    <div class="row">
        <div class="col-lg-8 mx-auto">
            <div class="card shadow-sm border-0">
                <div class="card-header" style="background: var(--primary-color); color: white;">
                    <h3 class="mb-0">{{ burger.nom }}</h3>
                </div>
                <div class="card-body">
                    {% if burger.image %}
                        <img src="{{ burger.image }}" alt="{{ burger.nom }}" style="max-width: 100%; height: auto; border-radius: 8px; margin-bottom: 20px;">
                    {% endif %}

                    <div class="row mb-3">
                        <div class="col-md-6">
                            <h5>Description</h5>
                            <p>{{ burger.description }}</p>
                        </div>
                        <div class="col-md-6">
                            <h5>Informations</h5>
                            <p><strong>Prix:</strong> <span style="color: var(--primary-color);">{{ burger.prix }}€</span></p>
                            <p><strong>Statut:</strong> <span class="badge" style="background: var(--primary-color);">{{ burger.statut }}</span></p>
                        </div>
                    </div>

                    <div class="d-flex gap-2">
                        <a href="{{ path('app_burger_edit', {id: burger.id}) }}" class="btn btn-primary">
                            <i class="fas fa-edit"></i> Modifier
                        </a>
                        <a href="{{ path('app_burger_list') }}" class="btn btn-secondary">
                            <i class="fas fa-arrow-left"></i> Retour
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% extends 'base.html.twig' %}

{% block title %}Tableau de bord{% endblock %}

{% block content %}
<div class="container-fluid py-4">
    <h1 class="mb-4">Tableau de bord Gestionnaire</h1>

    <div class="row mb-4">
        <div class="col-md-3">
            <div class="card text-center shadow-sm border-0">
                <div class="card-body">
                    <i class="fas fa-shopping-cart fa-2x mb-3" style="color: var(--primary-color)"></i>
                    <h5 class="card-title">Commandes en cours</h5>
                    <h2 style="color: var(--primary-color);">0</h2>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card text-center shadow-sm border-0">
                <div class="card-body">
                    <i class="fas fa-check-square fa-2x mb-3" style="color: #28a745"></i>
                    <h5 class="card-title">Commandes validées</h5>
                    <h2 style="color: #28a745;">0</h2>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card text-center shadow-sm border-0">
                <div class="card-body">
                    <i class="fas fa-hamburger fa-2x mb-3" style="color: var(--secondary-color)"></i>
                    <h5 class="card-title">Burgers disponibles</h5>
                    <h2 style="color: var(--secondary-color);">0</h2>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card text-center shadow-sm border-0">
                <div class="card-body">
                    <i class="fas fa-euro-sign fa-2x mb-3" style="color: #ffc107"></i>
                    <h5 class="card-title">Recettes aujourd'hui</h5>
                    <h2 style="color: #ffc107;">0€</h2>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-8">
            <div class="card shadow-sm border-0">
                <div class="card-header" style="background: var(--primary-color); color: white;">
                    <h5 class="mb-0">Dernières commandes</h5>
                </div>
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Client</th>
                                <th>Montant</th>
                                <th>État</th>
                                <th>Date</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td colspan="5" class="text-center text-muted py-4">Aucune commande</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="card shadow-sm border-0">
                <div class="card-header" style="background: var(--primary-color); color: white;">
                    <h5 class="mb-0">Liens rapides</h5>
                </div>
                <div class="card-body">
                    <a href="{{ path('app_burger_list') }}" class="btn btn-outline-primary w-100 mb-2">
                        <i class="fas fa-hamburger"></i> Gérer les burgers
                    </a>
                    <a href="{{ path('app_gestionnaire_commandes') }}" class="btn btn-outline-primary w-100 mb-2">
                        <i class="fas fa-shopping-cart"></i> Gérer les commandes
                    </a>
                    <a href="{{ path('app_gestionnaire_statistiques') }}" class="btn btn-outline-primary w-100">
                        <i class="fas fa-chart-line"></i> Voir les statistiques
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}

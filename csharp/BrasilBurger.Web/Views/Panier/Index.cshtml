@using BrasilBurger.Web.Controllers
@model List<ItemPanier>

@{
    ViewData["Title"] = "Mon Panier";
}

<div class="container mt-5">
    <h1 class="mb-4">Mon Panier</h1>

    @if (Model == null || Model.Count == 0)
    {
        <div class="alert alert-info">
            <p>Votre panier est vide.</p>
            <a href="@Url.Action("Burgers", "Produit")" class="btn btn-primary">Continuer les achats</a>
        </div>
    }
    else
    {
        <div class="row">
            <div class="col-md-8">
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead class="table-light">
                            <tr>
                                <th>Produit</th>
                                <th>Type</th>
                                <th>Quantité</th>
                                <th>Prix Unitaire</th>
                                <th>Sous-total</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td><strong>@item.Nom</strong></td>
                                    <td><span class="badge bg-primary">@item.TypeProduit</span></td>
                                    <td>
                                        <form asp-action="MettreAJourQuantite" asp-controller="Panier" method="post" class="d-inline">
                                            <input type="hidden" name="id" value="@item.IdProduit" />
                                            <input type="hidden" name="type" value="@item.TypeProduit" />
                                            <div class="input-group input-group-sm" style="width: 100px;">
                                                <input type="number" name="quantite" value="@item.Quantite" min="1" class="form-control">
                                                <button type="submit" class="btn btn-outline-secondary">Maj</button>
                                            </div>
                                        </form>
                                    </td>
                                    <td>
                                        @item.PrixUnitaire.ToString("F2") XOF
                                    </td>
                                    <td>
                                        <strong>@((item.PrixUnitaire * item.Quantite).ToString("F2")) XOF</strong>
                                    </td>
                                    <td>
                                        <form asp-action="Supprimer" asp-controller="Panier" method="post" class="d-inline">
                                            <input type="hidden" name="id" value="@item.IdProduit" />
                                            <input type="hidden" name="type" value="@item.TypeProduit" />
                                            <button type="submit" class="btn btn-sm btn-danger">
                                                <i class="fas fa-trash"></i>
                                            </button>
                                        </form>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                <div class="mt-3">
                    <a href="@Url.Action("Burgers", "Produit")" class="btn btn-outline-secondary">
                        <i class="fas fa-arrow-left"></i> Continuer les achats
                    </a>
                    <form asp-action="Vider" asp-controller="Panier" method="post" class="d-inline">
                        <button type="submit" class="btn btn-outline-danger" onclick="return confirm('Êtes-vous sûr?')">
                            <i class="fas fa-trash"></i> Vider le panier
                        </button>
                    </form>
                </div>
            </div>

            <div class="col-md-4">
                <div class="card shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title">Résumé du Panier</h5>
                        <hr>

                        <div class="d-flex justify-content-between mb-2">
                            <span>Total:</span>
                            <strong id="subtotal">
                                @{
                                    decimal total = Model.Sum(item => item.PrixUnitaire * item.Quantite);
                                }
                                @total.ToString("F2") XOF
                            </strong>
                        </div>

                        <a href="@Url.Action("Checkout", "Commande")" class="btn btn-primary w-100">
                            Passer la Commande
                        </a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@section Scripts {
    <script>
        // Les totaux sont calculés côté serveur et affichés directement
        console.log('✅ Panier chargé avec les prix corrects');
    </script>
}

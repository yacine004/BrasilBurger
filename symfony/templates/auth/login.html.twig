{% extends 'base.html.twig' %}

{% block title %}{{ title }}{% endblock %}

{% block content %}
<div class="container-fluid d-flex align-items-center justify-content-center" style="min-height: 100vh; background: linear-gradient(135deg, var(--primary-color), var(--secondary-color));">
    <div class="card shadow-lg" style="width: 100%; max-width: 400px;">
        <div class="card-body p-5">
            <h3 class="card-title text-center mb-4 fw-bold">Brasil Burger</h3>
            <p class="text-center text-muted mb-4">Connexion Ã  votre compte</p>

            {% if error %}
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    {{ error.messageKey|trans(error.messageData, 'security') }}
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            {% endif %}

            <form method="post">
                <div class="mb-3">
                    <label for="username" class="form-label">Email</label>
                    <input type="email" id="username" name="_username" class="form-control" value="{{ last_username }}" required autofocus>
                </div>

                <div class="mb-3">
                    <label for="password" class="form-label">Mot de passe</label>
                    <input type="password" id="password" name="_password" class="form-control" required>
                </div>

                <button type="submit" class="btn w-100 text-white" style="background: var(--primary-color);">
                    Connexion
                </button>
            </form>

            <div class="text-center mt-3">
                <small class="text-muted">Pas encore inscrit? <a href="{{ path('app_register') }}">S'inscrire</a></small>
            </div>
        </div>
    </div>
</div>
{% endblock %}

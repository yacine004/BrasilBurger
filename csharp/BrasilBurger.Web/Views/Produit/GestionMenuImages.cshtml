@model List<BrasilBurger.Web.Models.Menu>

@{
    ViewData["Title"] = "Gestion des Images des Menus";
}

<div style="background: linear-gradient(135deg, #667EEA 0%, #764BA2 100%); padding: 40px 0; margin-bottom: 40px;">
    <div class="container">
        <h1 class="text-white mb-0" style="font-size: 2.5rem; font-weight: bold;">
            <i class="fas fa-images"></i> Gestion des Images des Menus
        </h1>
        <p class="text-light mt-2">T√©l√©chargez et mettez √† jour les images pour chaque menu</p>
    </div>
</div>

<div class="container mb-5">
    <div class="row">
        @if (Model != null && Model.Count > 0)
        {
            @foreach (var menu in Model)
            {
                <div class="col-lg-4 col-md-6 mb-4">
                    <div class="card border-0 shadow-lg h-100">
                        <div style="position: relative; height: 300px; background: #f0f0f0; display: flex; align-items: center; justify-content: center; overflow: hidden;">
                            @if (!string.IsNullOrEmpty(menu.Image))
                            {
                                <img src="@menu.Image" alt="@menu.Nom" style="width: 100%; height: 100%; object-fit: cover;">
                            }
                            else
                            {
                                <div style="text-align: center;">
                                    <i class="fas fa-image" style="font-size: 60px; color: #ddd;"></i>
                                    <p class="text-muted mt-2">Pas d'image</p>
                                </div>
                            }
                        </div>

                        <div class="card-body" style="padding: 25px;">
                            <h5 class="card-title mb-3" style="font-weight: 800; font-size: 1.25rem;">@menu.Nom</h5>

                            <form id="form-@menu.Id" enctype="multipart/form-data" style="display: none;">
                                <input type="hidden" name="menuId" value="@menu.Id">
                                <input type="file" name="image" id="imageFile-@menu.Id" accept="image/*" style="display: none;">
                            </form>

                            <div class="d-grid gap-2">
                                <button type="button" class="btn btn-primary" onclick="document.getElementById('imageFile-@menu.Id').click()">
                                    <i class="fas fa-upload"></i> Choisir une image
                                </button>
                                <button type="button" class="btn btn-success" onclick="uploadMenuImage(@menu.Id)" id="btnUpload-@menu.Id" disabled>
                                    <i class="fas fa-check"></i> Confirmer l'upload
                                </button>
                                @if (!string.IsNullOrEmpty(menu.Image))
                                {
                                    <button type="button" class="btn btn-danger" onclick="deleteMenuImage(@menu.Id)">
                                        <i class="fas fa-trash"></i> Supprimer l'image
                                    </button>
                                }
                            </div>

                            <div id="status-@menu.Id" style="margin-top: 15px; display: none;">
                                <div class="alert alert-info">
                                    <span id="statusText-@menu.Id"></span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="col-12">
                <div class="alert alert-warning">
                    <i class="fas fa-exclamation-circle"></i> Aucun menu trouv√©
                </div>
            </div>
        }
    </div>
</div>

<script>
    // G√©rer la s√©lection d'image
    @foreach (var menu in Model ?? new List<BrasilBurger.Web.Models.Menu>())
    {
        <text>
            document.getElementById('imageFile-@menu.Id').addEventListener('change', function(e) {
                const fileName = e.target.files[0]?.name || 'Pas d\'image s√©lectionn√©e';
                document.getElementById('btnUpload-@menu.Id').disabled = !e.target.files[0];
                if (e.target.files[0]) {
                    console.log(`‚úÖ Image s√©lectionn√©e pour menu @menu.Id:`, fileName);
                }
            });
        </text>
    }

    // Upload l'image
    async function uploadMenuImage(menuId) {
        const fileInput = document.getElementById(`imageFile-${menuId}`);
        const file = fileInput.files[0];

        if (!file) {
            alert('‚ö†Ô∏è Veuillez s√©lectionner une image');
            return;
        }

        const formData = new FormData();
        formData.append('menuId', menuId);
        formData.append('image', file);

        console.log('üì§ Upload de l\'image pour le menu', menuId);
        document.getElementById(`status-${menuId}`).style.display = 'block';
        document.getElementById(`statusText-${menuId}`).textContent = 'Upload en cours...';

        try {
            const response = await fetch('@Url.Action("UploadMenuImage", "Produit")', {
                method: 'POST',
                body: formData
            });

            const result = await response.json();

            if (result.success) {
                console.log('‚úÖ Image upload√©e avec succ√®s');
                document.getElementById(`statusText-${menuId}`).innerHTML = `<i class="fas fa-check-circle" style="color: green;"></i> Image upload√©e avec succ√®s!`;
                setTimeout(() => {
                    location.reload();
                }, 2000);
            } else {
                console.error('‚ùå Erreur:', result.message);
                document.getElementById(`statusText-${menuId}`).innerHTML = `<i class="fas fa-exclamation-circle" style="color: red;"></i> Erreur: ${result.message}`;
            }
        } catch (error) {
            console.error('‚ùå Erreur r√©seau:', error);
            document.getElementById(`statusText-${menuId}`).innerHTML = `<i class="fas fa-exclamation-circle" style="color: red;"></i> Erreur serveur`;
        }
    }

    // Supprimer l'image
    async function deleteMenuImage(menuId) {
        if (!confirm('√ätes-vous s√ªr de vouloir supprimer cette image?')) return;

        console.log('üóëÔ∏è Suppression de l\'image pour le menu', menuId);
        document.getElementById(`status-${menuId}`).style.display = 'block';
        document.getElementById(`statusText-${menuId}`).textContent = 'Suppression en cours...';

        try {
            const response = await fetch(`@Url.Action("DeleteMenuImage", "Produit")?menuId=${menuId}`, {
                method: 'DELETE'
            });

            const result = await response.json();

            if (result.success) {
                console.log('‚úÖ Image supprim√©e avec succ√®s');
                document.getElementById(`statusText-${menuId}`).innerHTML = `<i class="fas fa-check-circle" style="color: green;"></i> Image supprim√©e avec succ√®s!`;
                setTimeout(() => {
                    location.reload();
                }, 2000);
            } else {
                console.error('‚ùå Erreur:', result.message);
                document.getElementById(`statusText-${menuId}`).innerHTML = `<i class="fas fa-exclamation-circle" style="color: red;"></i> Erreur: ${result.message}`;
            }
        } catch (error) {
            console.error('‚ùå Erreur r√©seau:', error);
            document.getElementById(`statusText-${menuId}`).innerHTML = `<i class="fas fa-exclamation-circle" style="color: red;"></i> Erreur serveur`;
        }
    }
</script>

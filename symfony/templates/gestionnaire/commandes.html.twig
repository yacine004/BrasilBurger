{% extends 'base.html.twig' %}

{% block title %}Gestion des Commandes{% endblock %}

{% block content %}
<div class="container-fluid py-4">
    <h1 class="mb-4">Gestion des Commandes</h1>

    <div class="card shadow-sm border-0 mb-4">
        <div class="card-body">
            <form method="get" class="row g-3">
                <div class="col-md-4">
                    <input type="text" name="clientNom" class="form-control" placeholder="Nom du client..." value="{{ app.request.query.get('clientNom', '') }}">
                </div>
                <div class="col-md-3">
                    <select name="statut" class="form-select">
                        <option value="">-- Tous les états --</option>
                        <option value="EN_ATTENTE" {% if app.request.query.get('statut') == 'EN_ATTENTE' %}selected{% endif %}>En attente</option>
                        <option value="EN_COURS" {% if app.request.query.get('statut') == 'EN_COURS' %}selected{% endif %}>En cours</option>
                        <option value="VALIDEE" {% if app.request.query.get('statut') == 'VALIDEE' %}selected{% endif %}>Validée</option>
                        <option value="ANNULEE" {% if app.request.query.get('statut') == 'ANNULEE' %}selected{% endif %}>Annulée</option>
                    </select>
                </div>
                <div class="col-md-3">
                    <select name="typeCommande" class="form-select">
                        <option value="">-- Tous les types --</option>
                        <option value="PLACE" {% if app.request.query.get('typeCommande') == 'PLACE' %}selected{% endif %}>Sur place</option>
                        <option value="RETRAIT" {% if app.request.query.get('typeCommande') == 'RETRAIT' %}selected{% endif %}>Retrait</option>
                        <option value="LIVRAISON" {% if app.request.query.get('typeCommande') == 'LIVRAISON' %}selected{% endif %}>Livraison</option>
                    </select>
                </div>
                <div class="col-md-2">
                    <button type="submit" class="btn btn-primary w-100">Filtrer</button>
                </div>
            </form>
        </div>
    </div>

    <div class="table-responsive">
        <table class="table table-hover">
            <thead style="background: var(--primary-color); color: white;">
                <tr>
                    <th>#</th>
                    <th>Client</th>
                    <th>Téléphone</th>
                    <th>Montant</th>
                    <th>Type</th>
                    <th>État</th>
                    <th>Date</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td colspan="8" class="text-center text-muted py-4">Aucune commande trouvée</td>
                </tr>
            </tbody>
        </table>
    </div>
</div>
{% endblock %}

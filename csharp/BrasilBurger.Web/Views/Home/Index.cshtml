@model HomeViewModel

@{
    ViewData["Title"] = "Brasil Burger - Les Meilleurs Burgers Artisanaux";
}

<!-- Hero Section -->
<section class="hero" style="background: linear-gradient(135deg, rgba(244, 81, 30, 0.9) 0%, rgba(255, 152, 0, 0.9) 100%); color: white; padding: 100px 0; position: relative; overflow: hidden;">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-6 mb-5 mb-lg-0">
                <h1 style="font-size: 3.5rem; font-weight: 900; line-height: 1.2; margin-bottom: 25px;">
                    Les Meilleurs Burgers<br>Artisanaux
                </h1>
                <p style="font-size: 1.15rem; margin-bottom: 30px; line-height: 1.6; opacity: 0.95;">
                    Préparés avec passion. Des ingrédients frais de qualité. Livraison rapide ou à emporter.
                </p>
                <a href="@Url.Action("Burgers", "Produit")" class="btn btn-light btn-lg" style="border-radius: 30px; font-weight: 700; padding: 14px 40px; font-size: 1rem;">
                    <i class="fas fa-arrow-right me-2"></i>Allez à la Carte
                </a>
            </div>
            <div class="col-lg-6 text-center">
                <img id="heroMainImage" src="https://via.placeholder.com/400x400?text=Burger+Hero" alt="Burgers" class="img-fluid" style="max-height: 450px; filter: drop-shadow(0 30px 60px rgba(0,0,0,0.3));">
            </div>
        </div>
    </div>
</section>

<!-- Nos Burgers Populaires -->
<section style="padding: 80px 0; background: white;">
    <div class="container">
        <h2 style="font-size: 2.5rem; font-weight: 900; color: #333; margin-bottom: 50px;">
            <i class="fas fa-star" style="color: #F4511E;"></i> Nos Burgers Populaires
        </h2>
        
        <div class="row">
            @if (Model != null && Model.BurgersRecents != null && Model.BurgersRecents.Count > 0)
            {
                @foreach (var burger in Model.BurgersRecents.Take(4))
                {
                    <div class="col-lg-3 col-md-6 mb-4">
                        <div class="card h-100" style="border: none; border-radius: 20px; overflow: hidden; box-shadow: 0 10px 30px rgba(0,0,0,0.1); transition: all 0.3s ease;">
                            <div style="position: relative; height: 250px; overflow: hidden;">
                                @if (!string.IsNullOrEmpty(burger.Image))
                                {
                                    <img src="@burger.Image" class="card-img-top" alt="@burger.Nom" style="height: 100%; object-fit: cover; transition: transform 0.3s ease;">
                                }
                                else
                                {
                                    <div style="height: 100%; background: linear-gradient(135deg, #FFE0B2, #FFCC80); display: flex; align-items: center; justify-content: center;">
                                        <i class="fas fa-burger" style="font-size: 80px; color: #F4511E; opacity: 0.2;"></i>
                                    </div>
                                }
                                <span class="badge" style="position: absolute; top: 15px; right: 15px; background: #F4511E; color: white; padding: 8px 15px; border-radius: 20px; font-weight: 700; font-size: 0.85rem;">Populaire</span>
                            </div>
                            <div class="card-body" style="padding: 25px;">
                                <h5 class="card-title" style="font-weight: 800; color: #333; margin-bottom: 10px; font-size: 1.25rem;">@burger.Nom</h5>
                                <p class="text-muted" style="font-size: 0.95rem; margin-bottom: 15px; min-height: 40px;">Prêt à commander ? Personnalisez et passez votre commande</p>
                                <div style="display: flex; justify-content: space-between; align-items: center;">
                                    <span style="font-size: 1.6rem; font-weight: 900; color: #F4511E;">@burger.Prix.ToString("F2") €</span>
                                    <a href="@Url.Action("DetailBurger", "Produit", new { id = burger.Id })" class="btn btn-sm" style="background: linear-gradient(135deg, #F4511E, #FF9800); color: white; border: none; border-radius: 20px; font-weight: 700;">
                                        Commander
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            }
        </div>
    </div>
</section>

<!-- Nos Menus -->
<section style="padding: 80px 0; background: #f8f9fa;">
    <div class="container">
        <h2 style="font-size: 2.5rem; font-weight: 900; color: #333; margin-bottom: 50px;">
            <i class="fas fa-list" style="color: #4CAF50;"></i> Nos Menus
        </h2>
        
        <div class="row">
            @if (Model != null && Model.MenusRecents != null && Model.MenusRecents.Count > 0)
            {
                @foreach (var menu in Model.MenusRecents.Take(3))
                {
                    <div class="col-lg-4 mb-4">
                        <div class="card h-100" style="border: none; border-radius: 20px; overflow: hidden; box-shadow: 0 10px 30px rgba(0,0,0,0.1);">
                            <div style="position: relative; height: 250px; background: linear-gradient(135deg, #4CAF50, #8BC34A);">
                                @if (!string.IsNullOrEmpty(menu.Image))
                                {
                                    <img src="@menu.Image" class="card-img-top" alt="@menu.Nom" style="height: 100%; object-fit: cover; opacity: 0.8;">
                                }
                                else
                                {
                                    <div style="height: 100%; display: flex; align-items: center; justify-content: center;">
                                        <i class="fas fa-utensils" style="font-size: 80px; color: white; opacity: 0.3;"></i>
                                    </div>
                                }
                            </div>
                            <div class="card-body" style="padding: 25px;">
                                <h5 class="card-title" style="font-weight: 800; color: #333; margin-bottom: 10px; font-size: 1.25rem;">@menu.Nom</h5>
                                <p class="text-muted" style="font-size: 0.95rem; margin-bottom: 15px;">
                                    @{
                                        string description = menu.Nom switch {
                                            "Menu Classique" => "Burger savoureux • Frites croustillantes • Boisson fraîche",
                                            "Menu Premium" => "Double burger gourmet • Frites maison • Sauce spéciale",
                                            "Menu Famille" => "Burgers variés • Frites géantes • Accompagnements",
                                            _ => "Menu délicieux • Frites + Boisson"
                                        };
                                    }
                                    @description
                                </p>
                                <div style="display: flex; justify-content: space-between; align-items: center;">
                                    <span style="font-size: 1.6rem; font-weight: 900; color: #4CAF50;">16.50 €</span>
                                    <a href="@Url.Action("DetailMenu", "Produit", new { id = menu.Id })" class="btn btn-sm" style="background: linear-gradient(135deg, #4CAF50, #8BC34A); color: white; border: none; border-radius: 20px; font-weight: 700;">
                                        Commander
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            }
        </div>
    </div>
</section>

<!-- Pourquoi Nous Choisir -->
<section style="padding: 80px 0; background: white;">
    <div class="container">
        <h2 style="font-size: 2.5rem; font-weight: 900; color: #333; text-align: center; margin-bottom: 60px;">
            Pourquoi Nous Choisir ?
        </h2>
        
        <div class="row" style="text-align: center;">
            <div class="col-lg-4 col-md-6 mb-4">
                <div style="padding: 40px 30px; background: #fff3e0; border-radius: 15px; transition: all 0.3s ease;">
                    <i class="fas fa-heart" style="font-size: 60px; color: #F4511E; margin-bottom: 20px; display: block;"></i>
                    <h5 style="font-weight: 800; color: #333; margin-bottom: 15px; font-size: 1.25rem;">Ingrédients Frais</h5>
                    <p class="text-muted" style="margin-bottom: 0;">Variétés sélectionnées localement. Recettes 100% fraîcheur. À partir de 2020</p>
                </div>
            </div>

            <div class="col-lg-4 col-md-6 mb-4">
                <div style="padding: 40px 30px; background: #e3f2fd; border-radius: 15px; transition: all 0.3s ease;">
                    <i class="fas fa-bolt" style="font-size: 60px; color: #2196F3; margin-bottom: 20px; display: block;"></i>
                    <h5 style="font-weight: 800; color: #333; margin-bottom: 15px; font-size: 1.25rem;">Livraison Rapide</h5>
                    <p class="text-muted" style="margin-bottom: 0;">Commander maintenant en moins de 30 minutes. Livrés chauds à votre porte</p>
                </div>
            </div>

            <div class="col-lg-4 col-md-6">
                <div style="padding: 40px 30px; background: #f3e5f5; border-radius: 15px; transition: all 0.3s ease;">
                    <i class="fas fa-chef-hat" style="font-size: 60px; color: #9C27B0; margin-bottom: 20px; display: block;"></i>
                    <h5 style="font-weight: 800; color: #333; margin-bottom: 15px; font-size: 1.25rem;">Chefs Passionnés</h5>
                    <p class="text-muted" style="margin-bottom: 0;">Une équipe de cuisiniers experts. Recettes authentiques et améliorées</p>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- CTA Section -->
<section style="background: linear-gradient(135deg, #F4511E 0%, #FF9800 100%); color: white; padding: 80px 0; text-align: center;">
    <div class="container">
        <h2 style="font-size: 2.5rem; font-weight: 900; margin-bottom: 20px;">
            Prêt à Savourer ?
        </h2>
        <p style="font-size: 1.2rem; margin-bottom: 40px; opacity: 0.95;">
            Rejoignez des milliers de clients satisfaits
        </p>
        <a href="@Url.Action("Burgers", "Produit")" class="btn btn-light btn-lg" style="border-radius: 30px; font-weight: 700; padding: 14px 50px; font-size: 1.1rem;">
            Commencer Votre Commande
        </a>
    </div>
</section>

<style>
    .hero img {
        transition: transform 0.5s ease;
    }
    
    .hero img:hover {
        transform: scale(1.05);
    }
    
    .card {
        transition: all 0.3s ease;
    }
    
    .card:hover {
        transform: translateY(-10px);
        box-shadow: 0 20px 50px rgba(0,0,0,0.15) !important;
    }
    
    .card:hover img {
        transform: scale(1.1);
    }
</style>
@section Scripts {
<script>
    // Load hero image from session on page load
    document.addEventListener('DOMContentLoaded', function() {
        fetch('/Home/GetHeroImage')
            .then(response => response.json())
            .then(data => {
                if (data.imageUrl) {
                    document.getElementById('heroMainImage').src = data.imageUrl;
                }
            })
            .catch(error => console.error('Erreur lors du chargement du hero image:', error));
    });
</script>
}
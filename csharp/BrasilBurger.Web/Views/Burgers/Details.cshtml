@model BrasilBurger.Web.Models.ViewModels.BurgerDetailViewModel

@{
    ViewData["Title"] = Model.Burger?.Nom ?? "Burger";
}

@if (Model.Burger != null)
{
    <div class="row">
        <div class="col-md-6">
            @if (!string.IsNullOrEmpty(Model.Burger.Image))
            {
                <img src="@Model.Burger.Image" class="img-fluid rounded" alt="@Model.Burger.Nom">
            }
            else
            {
                <div class="bg-secondary rounded d-flex align-items-center justify-content-center" style="height: 400px;">
                    <span style="font-size: 10rem;">üçî</span>
                </div>
            }
        </div>
        <div class="col-md-6">
            <h1>@Model.Burger.Nom</h1>
            <p class="lead">@Model.Burger.Description</p>
            
            <div class="mb-3">
                <h4 class="badge badge-primary" style="font-size: 1.5rem;">@Model.Burger.Prix.ToString("C")</h4>
            </div>

            <div class="mb-3">
                @if (Model.Burger.Disponible)
                {
                    <span class="badge bg-success" style="font-size: 1.1rem;">‚úì Disponible</span>
                }
                else
                {
                    <span class="badge bg-danger" style="font-size: 1.1rem;">‚úó Indisponible</span>
                }
                <span class="badge bg-info" style="font-size: 1.1rem;">Stock: @Model.Burger.Stock</span>
            </div>

            <form method="post" action="/cart/additem" class="mb-4">
                <div class="mb-3">
                    <label class="form-label">Quantit√©:</label>
                    <input type="number" name="quantity" value="1" min="1" max="@Model.Burger.Stock" class="form-control" style="max-width: 100px;">
                </div>

                @if (Model.Complements.Any())
                {
                    <div class="mb-3">
                        <label class="form-label">Compl√©ments (optionnel):</label>
                        <div class="border rounded p-3" style="max-height: 200px; overflow-y: auto;">
                            @foreach (var complement in Model.Complements.Where(c => c.Disponible))
                            {
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" id="complement_@complement.Id" 
                                           name="selectedComplementIds" value="@complement.Id">
                                    <label class="form-check-label" for="complement_@complement.Id">
                                        @complement.Nom (+@complement.Prix.ToString("C"))
                                    </label>
                                </div>
                            }
                        </div>
                    </div>
                }

                <input type="hidden" name="burgerId" value="@Model.Burger.Id">
                <button type="submit" class="btn btn-primary btn-lg w-100" 
                        disabled="@(!Model.Burger.Disponible || Model.Burger.Stock == 0)">
                    üõí Ajouter au Panier
                </button>
            </form>

            <a href="/burgers" class="btn btn-secondary w-100">‚Üê Retour au Menu</a>
        </div>
    </div>
}
else
{
    <div class="alert alert-danger">Burger non trouv√©</div>
}

{% extends 'base.html.twig' %}

{% block title %}{{ title }}{% endblock %}

{% block content %}
<div class="container-fluid py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="mb-0">{{ title }}</h1>
        <a href="{{ path('app_burger_create') }}" class="btn btn-primary">
            <i class="fas fa-plus"></i> Nouveau Burger
        </a>
    </div>

    {% if burgers is empty %}
        <div class="alert alert-info">
            <i class="fas fa-info-circle"></i> Aucun burger disponible pour le moment.
        </div>
    {% else %}
        <div class="row g-4">
            {% for burger in burgers %}
                <div class="col-lg-4 col-md-6">
                    <div class="card h-100 shadow-sm border-0">
                        {% if burger.image %}
                            <img src="{{ burger.image }}" class="card-img-top" alt="{{ burger.nom }}" style="height: 200px; object-fit: cover;">
                        {% else %}
                            <div class="card-img-top bg-light d-flex align-items-center justify-content-center" style="height: 200px;">
                                <i class="fas fa-hamburger fa-3x text-muted"></i>
                            </div>
                        {% endif %}
                        <div class="card-body">
                            <h5 class="card-title">{{ burger.nom }}</h5>
                            <p class="card-text text-muted small">{{ burger.description|truncate(80) }}</p>
                            <div class="d-flex justify-content-between align-items-center">
                                <span class="h5 mb-0" style="color: var(--primary-color);">{{ burger.prix }}€</span>
                                <span class="badge" style="background: var(--primary-color);">{{ burger.statut }}</span>
                            </div>
                        </div>
                        <div class="card-footer bg-white border-top-0">
                            <div class="btn-group w-100" role="group">
                                <a href="{{ path('app_burger_edit', {id: burger.id}) }}" class="btn btn-sm btn-outline-primary">
                                    <i class="fas fa-edit"></i> Modifier
                                </a>
                                <form method="post" action="{{ path('app_burger_delete', {id: burger.id}) }}" style="flex: 1;" onsubmit="return confirm('Êtes-vous sûr?');">
                                    <button type="submit" class="btn btn-sm btn-outline-danger w-100">
                                        <i class="fas fa-trash"></i> Supprimer
                                    </button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    {% endif %}
</div>
{% endblock %}
